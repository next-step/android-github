<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="gitHubRepoViewData"
            type="camp.nextstep.edu.github.GitHubRepoViewData" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/author_repository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="@{gitHubRepoViewData.authorRepoStr}"
            tools:text="Author/Repository" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:text="@{gitHubRepoViewData.description}"
            tools:text="Description" />
    </LinearLayout>
</layout>
